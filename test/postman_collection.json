{
	"info": {
		"name": "Fill Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000"
		},
		{
			"key": "token",
			"value": ""
		},
		{
			"key": "userId",
			"value": ""
		},
		{
			"key": "questionId",
			"value": ""
		}
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.token) {",
									"    pm.collectionVariables.set('token', res.token);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@email.com\",\n  \"password\": \"123456\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/auth/login"
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Create User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.id) {",
									"    pm.collectionVariables.set('userId', res.id);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@email.com\",\n  \"password\": \"123456\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/users"
					}
				},
				{
					"name": "List All Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/users"
					}
				},
				{
					"name": "Get User By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/users/{{userId}}"
					}
				},
				{
					"name": "Update User",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{ "key": "token", "value": "{{token}}" }]
						},
						"method": "PATCH",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"password\": \"newpassword123\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/users"
					}
				},
				{
					"name": "Delete User",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{ "key": "token", "value": "{{token}}" }]
						},
						"method": "DELETE",
						"header": [],
						"url": "{{baseUrl}}/users"
					}
				},
				{
					"name": "Request Password Reset",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@email.com\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/users/forget"
					}
				},
				{
					"name": "Reset Password",
					"request": {
						"method": "PATCH",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@email.com\",\n  \"token\": \"reset-token-here\",\n  \"password\": \"newpassword123\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/users/reset"
					}
				}
			]
		},
		{
			"name": "Questions",
			"item": [
				{
					"name": "Create Question",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.id) {",
									"    pm.collectionVariables.set('questionId', res.id);",
									"}"
								]
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{ "key": "token", "value": "{{token}}" }]
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"description\": \"What is the result of 2 + 2?\",\n  \"subject\": \"Math\",\n  \"alternatives\": [\n    { \"description\": \"3\", \"isCorrect\": false },\n    { \"description\": \"4\", \"isCorrect\": true },\n    { \"description\": \"5\", \"isCorrect\": false },\n    { \"description\": \"6\", \"isCorrect\": false },\n    { \"description\": \"7\", \"isCorrect\": false }\n  ]\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/questions"
					}
				},
				{
					"name": "List All Questions",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/questions"
					}
				},
				{
					"name": "Get Question By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/questions/{{questionId}}"
					}
				},
				{
					"name": "Update Question",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{ "key": "token", "value": "{{token}}" }]
						},
						"method": "PATCH",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"description\": \"What is the result of 3 + 3?\",\n  \"subject\": \"Math\",\n  \"alternatives\": [\n    { \"description\": \"3\", \"isCorrect\": false },\n    { \"description\": \"5\", \"isCorrect\": false },\n    { \"description\": \"6\", \"isCorrect\": true },\n    { \"description\": \"7\", \"isCorrect\": false },\n    { \"description\": \"8\", \"isCorrect\": false }\n  ]\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/questions/{{questionId}}"
					}
				},
				{
					"name": "Delete Question",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{ "key": "token", "value": "{{token}}" }]
						},
						"method": "DELETE",
						"header": [],
						"url": "{{baseUrl}}/questions/{{questionId}}"
					}
				}
			]
		}
	]
}
